<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AiM.Views.SettingsPage"
             Title="Settings">
    <TableView Intent="Settings" VerticalOptions="FillAndExpand">
        <TableRoot>
            <TableSection Title="OpenAI API">
                <EntryCell x:Name="OpenAiApiKeyEntry" Label="OpenAI API Key" Placeholder="OPENAI API KEY" />
            </TableSection>
            <TableSection Title="Azure Computer Vision Service">
                <EntryCell x:Name="AzureCVEPEntry" Label="Endpoint" Placeholder="AZURE CV END POINT"/>
                <EntryCell x:Name="AzureCVKeyEntry" Label="API Key" Placeholder="AZURE CV API KEY" />
            </TableSection>
            <TableSection Title="Azure Bing Search Service">
                <EntryCell x:Name="AzureBSEPEntry" Label="Endpoint" Placeholder="AZURE BS END POINT"/>
                <EntryCell x:Name="AzureBSKeyEntry" Label="API Key" Placeholder="AZURE BS API KEY" />
            </TableSection>
            <TableSection Title="Azure Cosmos DB Service">
                <EntryCell x:Name="AzureDBEPEntry" Label="Endpoint" Placeholder="AZURE DB END POINT"/>
                <EntryCell x:Name="AzureDBKeyEntry" Label="API Key" Placeholder="AZURE DB API KEY" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>
